---
import * as CONTENT from "../pages/content";
---

<!-- Hero section -->
<header class="mx-auto py-8">
  <article
    class="grid grid-cols-3 grid-rows-1 place-items-center w-[98vw] max-w-2xl"
  >
    <div
      class="rounded-full border-primary self-end shadow-2xl md:w-24 w-20 aspect-square"
    >
      <img
        src="/profile.jpg"
        alt="profile_picture"
        class="object-cover w-full h-full rounded-full grayscale-[50] hover:grayscale-0"
      />
    </div>

    <div class="grid text-center self-center whitespace-nowrap">
      <h1 class="text-3xl text-text">{CONTENT.name}</h1>
      <h3 class="text-lg text-text/90">{CONTENT.designation}</h3>
      <h5 class="text-sm text-text/80">
        <a href={`mailto:${CONTENT.email}`}>{CONTENT.email}</a>
      </h5>
    </div>

    <div class="md:grid text-right self-end">
      <h6 class="text-sm text-text/70 md:block hidden">{CONTENT.pronouns}</h6>
      <a
        href={CONTENT.linkedIn}
        target="_blank"
        class="hover:text-blue-300 md:flex items-center justify-end hidden"
      >
        LinkedIn
      </a>
      <a
        href={CONTENT.website}
        target="_blank"
        class="hover:text-blue-300 md:flex items-center justify-end hidden"
      >
        Personal Portfolio
      </a>
      <div class="flex flex-col gap-2 md:hidden">
        <a href={CONTENT.linkedIn} target="_blank">
          <img
            src="/linkedin.png"
            width="32"
            height="32"
            alt="linkedin"
            class="grayscale-[50] hover:grayscale-0"
          />
        </a>
        <a href={CONTENT.website} target="_blank">
          <img
            src="/profile.png"
            width="32"
            height="32"
            alt="portfolio"
            class="grayscale-[50] hover:grayscale-0"
          />
        </a>
      </div>
    </div>
  </article>
</header>
